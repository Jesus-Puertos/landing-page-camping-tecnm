<button
  id="add-to-calendar"
  class:list={`
		border-primaryClaro
    dark:border-primary 
    border-2 uppercase 
    rounded-md
    text-lg 
    text-secondaryClaro
    dark:text-secondary
    font-medium
    px-4 py-1 mt-8
    hover:bg-secondaryClaro
    dark:hover:bg-secondary 
    hover:scale-125
    hover:text-primaryClaro 
    dark:hover:text-primary 
    transition 
    inline-block
	`}
  aria-label="agregar al calendario se abrirá ventana flotante"
>
  Agregar al calendario
</button>

<script is:inline>
  const config = {
    name: "Camping TECNM ⛰️ 2 - 2024",
    description:
      "Evento para la carrera de ingenieria en sistemas computacionales,por celebrarse en Tequila, Veracruz.  .<br><br>Mira la ubicación → [url]https://maps.app.goo.gl/ZLTKaC311YEF2sKy6[/url]",
    location: "Tequila, Veracruz",
    startDate: "2024-04-26",
    endDate: "2024-04-27",
    startTime: "17:00",
    endTime: "08:00",
    options: ["Google", "Apple", "Microsoft365", "MicrosoftTeams"],
    timeZone: "America/Mexico_City",
    trigger: "click",
    iCalFileName: "Reminder-Event",
  };

  let status;

  function loadStyle(src) {
    return new Promise((resolve, reject) => {
      const link = document.createElement("link");
      link.href = src;
      link.rel = "stylesheet";

      link.onload = () => resolve(link);
      link.onerror = () => reject(new Error(`Style load error for ${src}`));

      document.head.append(link);
    });
  }

  const button = document.querySelector("#add-to-calendar");
  button?.addEventListener("click", async () => {
    if (status === "loading") return;

    if (!status) {
      const text = button.innerHTML;
      button.innerHTML = "Cargando...";
      status = "loading";
      await Promise.all([
        import("/js/add-to-calendar.js"),
        loadStyle("/css/add-to-calendar.css"),
      ]);
      status = "loaded";
      button.innerHTML = text;
    }

    const theme = document.documentElement.classList.contains("dark")
      ? "dark"
      : "light";
    config.lightMode = theme;

    window.atcb_action(config, button);
  });
</script>
