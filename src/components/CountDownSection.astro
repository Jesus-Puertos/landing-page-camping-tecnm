---
import CountDownIcon from "../assets/IlustrationCountDown.astro";
---

<section class="my-2 flex flex-col gap-y-2 justify-center items-center ">
  <!-- <CountDownIcon class="size-72 mx-auto" /> -->
  <h3
    class="animate-fade-in animate-delay-300 pb-4 text-sm font-medium text-primary uppercase"
  >
    Tiempo restante para el inicio de el evento.
  </h3>
  <div class="animate-fade-in-up animate-delay-400 relative mb-4 flex justify-center md:mb-8">
  <img src="/logo2025.png" class="relative z-10 w-[200px] select-none md:w-[300px] lg:w-[240px]" alt="" draggable="false">
</div>
  <div
    class="flex flex-wrap justify-center gap-6 animate-fade-in-up"
    {...Astro.props}
  >
    <div class="flex flex-col items-center justify-center bg-white text-black 
             rounded-md shadow-lg px-4 py-2 min-w-[70px]">
      <span class="text-4xl font-bold md:text-5xl" data-days>00</span>
      <span class="text-xs font-semibold uppercase mt-1">DÃ­as</span>
    </div>

    <span aria-hidden="true" class="hidden md:blockmt-1 text-8xl">:</span>

    <div class="flex flex-col items-center justify-center bg-white text-black 
             rounded-md shadow-lg px-4 py-2 min-w-[70px]">
      <span class="text-4xl font-bold md:text-5xl " data-hours>00</span>
      <span class="text-xs font-semibold uppercase mt-1">Horas</span>
    </div>
    <span aria-hidden="true" class="hidden md:blockmt-1 text-8xl">:</span>

    <div class="flex flex-col items-center justify-center bg-white text-black 
             rounded-md shadow-lg px-4 py-2 min-w-[70px]">
      <span class="text-4xl font-bold md:text-5xl" data-minutes>00</span>
      <span class="text-xs font-semibold uppercase mt-1">Minutos</span>
    </div>
    <span aria-hidden="true" class="hidden md:blockmt-1 text-8xl">:</span>

    <div class="flex flex-col items-center justify-center bg-white text-black 
             rounded-md shadow-lg px-4 py-2 min-w-[70px]">
      <span class="text-4xl font-bold md:text-5xl" data-seconds>00</span>
      <span class="text-xs font-semibold uppercase mt-1">Segundos</span>
    </div>
  </div>
</section>
