<section
  class="flex flex-col md:flex-row w-full justify-between items-center bg-[url('https://tailframes.com/images/squares-bg.webp')] dark:bg-none bg-cover bg-center bg-no-repeat mb-0"
>

  <div
    class="m-auto flex max-w-screen-xl grow flex-col items-center justify-start gap-6 px-3 py-20 md:gap-12 md:px-12 lg:max-w-7xl lg:px-24 order-1 md:order-2"
